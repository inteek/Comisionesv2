@using WebApplication1.Models
@model IEnumerable<WebApplication1.Models.Patentes>


@{
    ViewBag.Title = "Resumen de Patentes";
}

<div class="main-content">

    
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                     <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

                <li>
                    <a href="#">Resumen de Patentes</a>
                </li>
            </ul><!-- /.breadcrumb -->

            @*<div class="nav-search" id="nav-search">
                <form class="form-search">
                    <span class="input-icon">
                        <input type="text" placeholder="Buscar ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                        <i class="ace-icon fa fa-search nav-search-icon"></i>
                    </span>
                </form>
            </div>*@
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Resumen Patentes
                    @*<small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>*@
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">

                    <div class="clearfix">
                        <button id="btnXLS" class="pull-right DTTT_button btn btn-white btn-primary  btn-bold" title="Alt. Exportar Excel" style="padding: 4px 8px; display:none;">
                            <img src="~/assets/images/icons8-Microsoft Excel-48.png" style="width: 24px;" />
                        </button>
                        <div class="pull-right tableTools-container">

                        </div>
                    </div>
                    <div class="table-header">
                        Resultados obtenidos
                    </div>

                    <!-- div.table-responsive -->
                    <!-- div.dataTables_borderWrap -->
                    <div>
                        <input type="hidden" value="@ViewBag.hdnRolID" id="hdnRolID" />
                        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>IdEmpresa</th>
                                    <th>Empresa</th>
                                    <th>Num. Patente</th>
                                    <th>Descripcion</th>
                                    <th>Usuario Alta</th>
                                    <th>Fecha Alta</th>
                                    <th>Usuario Mod</th>
                                    <th>Fecha Mod</th>
                                    <th>Activo</th>
                                    <th></th>
                                </tr>

                            </thead>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdEmpresa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Empresa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdPatente)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UsuarioAlta)
                                            </td>
                                            <td>
                                                @string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(Html.DisplayFor(modelItem => item.FechaAlta).ToString()))
                                            </td>


                                            @if ((item.UsuarioModifica != null))
                                            {
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UsuarioModifica)
                                                </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }


                                            @if ((item.FechaModifica != null))
                                            {
                                                <td>
                                                    @string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(Html.DisplayFor(modelItem => item.FechaModifica).ToString())) 
                                                </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }



                                            @{ 
                                                var boolActivo = item.Activo == true?"SI":"NO";
                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => boolActivo)
                                            </td>
        
                                            <td></td>

                                        </tr>

                                    }                        
                        </table>

                        @*<table class="table table-hover table-striped table-bordered data-table">
                            <thead>
                                <tr>
                                    <th class="text-right">No.</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-right">1</td>
                                    <td>Name 1</td>
                                </tr>
                                <tr>
                                    <td class="text-right">2</td>
                                    <td>Name 2</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2" class="text-center">footer text</td>
                                </tr>
                            </tfoot>
                        </table>*@
                    </div>
                </div>
            </div>
        </div><!-- /.page-content -->
    </div>
</div>
<script type="text/javascript">
            var jquerymobile = '@Url.Content("~/assets/js/jquery.mobile.custom.js")'
            if ('ontouchstart' in document.documentElement) document.write("<script src='" + jquerymobile + "'>" + "<" + "/script>");
</script>


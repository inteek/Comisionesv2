@model IEnumerable<OneCoreData.com_vendedores>

@{
    ViewBag.Title = "Resumen de Vendedores";
}

<div class="main-content">

    
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                     <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

                <li>
                    <a href="#">Resumen de Vendedores</a>
                </li>
            </ul><!-- /.breadcrumb -->

            @*<div class="nav-search" id="nav-search">
                <form class="form-search">
                    <span class="input-icon">
                        <input type="text" placeholder="Buscar ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                        <i class="ace-icon fa fa-search nav-search-icon"></i>
                    </span>
                </form>
            </div>*@
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Resumen Vendedores
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">

                    <div class="clearfix">
                        <button id="btnXLS" class="pull-right DTTT_button btn btn-white btn-primary  btn-bold" title="Alt. Exportar Excel" style="padding: 4px 8px; display:none;"><img src="~/assets/images/icons8-Microsoft Excel-48.png" style="width: 24px;" /></button>
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">
                        Resultados obtenidos
                    </div>

                    <!-- div.table-responsive -->
                    <!-- div.dataTables_borderWrap -->
                    <div>
                        <input type="hidden" value="@ViewBag.hdnRolID" id="hdnRolID" />
                        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>idVendedor</th>
                                    <th>strNombre</th>
                                    <th>Dirección</th>
                                    <th>Telefono</th>
                                    <th>
                                        <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                        Email
                                    </th>
                                    <th>Tipo</th>

                                    <th>Fecha Alta</th>
                                    <th>Fecha Mod.</th>
                                    <th>Banco.</th>
                                    <th>Calbe.</th>
                                    <th>Tipo Pago.</th>
                                    <th>Activo</th>
                                    <th></th>
                                </tr>
                            </thead>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.idCodigoVendedor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.strNombre)

                                                @Html.DisplayFor(modelItem => item.strApellidoP)
                                                @Html.DisplayFor(modelItem => item.strApellidoM)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.strDireccion)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.strTelefono)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.strEmail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.strTipoVendedor)
                                            </td>
                                            <td>@string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(Html.DisplayFor(modelItem => item.dtFechaAlta).ToString()))
                                            </td>
                                            @if ((item.dtFechaModifica != null))
                                            {
                                                <td>@string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(Html.DisplayFor(modelItem => item.dtFechaModifica).ToString())) </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => item.idBanco)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClabeInterbancaria)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoPago)
                                            </td>   
                                            @{ 
                                                var boolActivo = item.boolActivo==true?"SI":"NO";
                                            }
                                            <td> @Html.DisplayFor(modelItem => boolActivo)</td>
        
                                            <td>
                                                @*@Html.ActionLink("Edit", "Edit", new { id = item.idCodigoVendedor }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.idCodigoVendedor }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.idCodigoVendedor })*@
                                            </td>
                                        </tr>
                                    }                        </table>

                        @*<table class="table table-hover table-striped table-bordered data-table">
                            <thead>
                                <tr>
                                    <th class="text-right">No.</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-right">1</td>
                                    <td>Name 1</td>
                                </tr>
                                <tr>
                                    <td class="text-right">2</td>
                                    <td>Name 2</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2" class="text-center">footer text</td>
                                </tr>
                            </tfoot>
                        </table>*@
                    </div>
                    <!-- Modal evidencia-->
                    <div class="modal fade" id="evidenciaModal" tabindex="-1" role="dialog" aria-labelledby="evidenciaModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="evidenciaModalLabel">Ver Documentos</h4>
                                </div>
                                <div class="modal-body">
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <td colspan="3">Documentos</td>
                                            </tr>
                                        </thead>
                                        <tbody id="tblEvidencias"></tbody>
                                    </table>
                                </div>
                                <div class="modal-footer">
                                    <div class="input-group" style="width:100%;">
                                        <button type="button" class="btn btn-primary" onclick="fnCerrarPopup()">Ok</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div><!-- /.page-content -->
    </div>
</div>
<script type="text/javascript">
            var jquerymobile = '@Url.Content("~/assets/js/jquery.mobile.custom.js")'
            if ('ontouchstart' in document.documentElement) document.write("<script src='" + jquerymobile + "'>" + "<" + "/script>");
</script>


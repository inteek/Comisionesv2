@using WebApplication1.Models
@model WebApplication1.Models.Descuentos


@{
    ViewBag.Title = "Alta Descuentos";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                     <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

                <li>
                    <a href="#">Alta de Descuentos</a>
                </li>
            </ul><!-- /.breadcrumb -->



            @*<div class="nav-search" id="nav-search">
                <form class="form-search">
                    <span class="input-icon">
                        <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                        <i class="ace-icon fa fa-search nav-search-icon"></i>
                    </span>
                </form>
            </div>*@
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Alta de Descuentos
                    <!-- 
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>
                    -->
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->

                    <div class="widget-box">

                        <div class="widget-body">
                            <div class="widget-main">
                                <div id="fuelux-wizard-container">
                                    <div>
                                        <ul class="steps">
                                            <li data-step="1" class="active">
                                                <span class="step">1</span>
                                                <span class="title">Solicitud de Datos</span>
                                            </li>
                                            <li data-step="2">
                                                <span class="step">2</span>
                                                <span class="title">Confirmación</span>
                                            </li>
                                        </ul>
                                    </div>

                                    <hr />

                                    <div class="step-content pos-rel">
                                        <div class="step-pane active" data-step="1">
                                            <h3 class="lighter block green">Ingresa la información solicitada</h3>

                                            <form class="form-horizontal" id="vendedores-form" method="get">

                                                @using (Html.BeginForm())
                                                {

                                                    @Html.AntiForgeryToken()
                                                    <div class="form-horizontal">
                                                        <hr />
                                                        <br />
                                                        <br />

                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.Label("idEmpresa", "Empresa", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.DropDownList("idEmpresa", (SelectList)ViewBag.BagEmpresas, "-- Selecciona Empresa --", new { @class = "select2 fixed-width", @value = '0', @onchange = "javascript:GetCliente(this.value);" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.Label("idCodigoVendedor", "Vendedores", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.DropDownList("idCodigoVendedor", (SelectList)ViewBag.BagVendedores, "-- Selecciona Vendedor --", new { @class = "select2 fixed-width" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                <div class="row">
                                                                    @Html.Label("idConcepto", "Conceptos", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                    <div class="col-xs-4 col-sm-6">
                                                                        <div class="input-group" style="width:100%;">
                                                                            @Html.DropDownList("cbbConceptos", Enumerable.Empty<SelectListItem>(), "-- Selecciona empresa --", htmlAttributes: new { @class = "select2 col-xs-12 col-sm-12 no-padding-left" })
                                                                        </div>
                                                                    </div>
                                                                    <div style="clear:both;"></div>
                                                                    <div class="col-xs-2 col-sm-2">
                                                                        <a id="asociar" style="cursor:pointer; font-size:16px; display:none; margin-left:120px;">Agregar</a>
                                                                    </div>
                                                                    <div class="col-xs-2 col-sm-1">
                                                                        <a id="nuevo" style="cursor:pointer; font-size:16px; display:none; margin-left:115px;">Nuevo</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>


                                                        <div style="width:100%; clear:both;"></div>
                                                       
                                                            <div style="float:left;" class="col-xs-4 col-xs-4">
                                                                @Html.Label("totalAdeudo", "Total Adeudo:", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-6 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-4">

                                                                    <div class="clearfix">
                                                                        @Html.Editor("totalAdeudo", new { htmlAttributes = new { @class = "col-xs-12 col-sm-11", @type = "number", @step = "0.01", @min = "0", @Value = 0 } })
                                                                        @Html.ValidationMessageFor(model => model.total, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div style="float:left;" class="col-xs-4 col-xs-4">
                                                                @Html.Label("cantidadDescontar", "Cantidad a Descontar:", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-6 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-4">

                                                                    <div class="clearfix">
                                                                        @Html.Editor("cantidadDescontar", new { htmlAttributes = new { @class = "col-xs-12 col-sm-11", @type = "number", @min = "0", @Value = 0 } })
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div style="clear:both;"></div>

                                                            <div style="margin-top:20px;">
                                                                <div style="float:left;" class="col-sm-4 col-xs-4">
                                                                    <div class="form-group">
                                                                        @Html.Label("vigenciaInicio", "Vigencia: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                        <div class="col-xs-6 col-sm-9">
                                                                            <div class="input-group" style="width:100%;">
                                                                                <span class="input-group-addon">
                                                                                    <i class="fa fa-calendar bigger-110"></i>
                                                                                </span>
                                                                                @Html.TextBox("vigenciaInicio", "", new { @class = "form-control datepicker", placeholder = "Ingresa la fecha aquí..." })
                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div style="float:left;" class="col-sm-4 col-xs-4">
                                                                    <div class="form-group">
                                                                        @Html.Label("vigenciaFin", "al: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                        <div class="col-xs-6 col-sm-9">
                                                                            <div class="input-group" style="width:100%;">
                                                                                <span class="input-group-addon">
                                                                                    <i class="fa fa-calendar bigger-110"></i>
                                                                                </span>
                                                                                @Html.TextBox("vigenciaFin", "", new { @class = "form-control datepicker", placeholder = "Ingresa la fecha aquí..." })
                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                </div>


                                                                <div style="float:left;" class="col-sm-4 col-xs-4">
                                                                    <div style="float:left;" class="col-xs-12 col-sm-9">
                                                                        <div class="col-xs-12 col-sm-9">
                                                                            <label>
                                                                                @*@Html.CheckBoxFor(m => m.strIntercia)*@
                                                                                <input id="strIntercia" name="vigenciaIndefinida" type="checkbox" class="ace" />
                                                                                <span class="lbl"> Vigencia Indefinida</span>
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>
                                                }
                                             
                                            </form>
                                        </div>

                                        <div class="step-pane" data-step="2">
                                            <div class="col-xs-6 col-xs-offset-3 widget-container-col">
                                                <div class="widget-box widget-color-blue">
                                                    <!-- #section:custom/widget-box.options -->
                                                    <div class="widget-header">
                                                        <h5 class="widget-title bigger lighter">
                                                            <i class="ace-icon fa fa-table"></i>
                                                            Preview de alta patente
                                                        </h5>

                                                    </div>

                                                    <!-- /section:custom/widget-box.options -->
                                                    <div class="widget-body">
                                                        <div class="widget-main no-padding">
                                                            <table class="table table-striped table-bordered table-hover">
                                                                <thead class="thin-border-bottom">
                                                                    <tr>
                                                                        <th>
                                                                            <i class="ace-icon fa fa-bars"></i>
                                                                            Datos
                                                                        </th>

                                                                        <th>
                                                                            <i class="ace-icon fa fa-edit"></i>
                                                                            Valores
                                                                        </th>
                                                                    </tr>
                                                                </thead>

                                                                <tbody>
                                                                    <tr>
                                                                        <td class=""><b>Empresa</b></td>

                                                                        <td>
                                                                            <label id="lblEmpresa"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Vendedor</b></td>

                                                                        <td>
                                                                            <label id="lblVendedor"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Conceptos</b></td>

                                                                        <td>
                                                                            <label id="lblConceptos"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Total Adeudo</b></td>

                                                                        <td>
                                                                            <label id="lblAdeudo"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Cantidad a descontar</b></td>

                                                                        <td>
                                                                            <label id="lblDescontar"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Vigencia</b></td>

                                                                        <td>
                                                                            <label id="lblVigencia"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Al</b></td>

                                                                        <td>
                                                                            <label id="lblAl"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Vigencia indifenida</b></td>

                                                                        <td>
                                                                            <label id="lblIndefinida"></label>
                                                                        </td>
                                                                    </tr>

                                                                </tbody>
                                                            </table>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div><!-- /.span -->
                                            <div style="clear:both;"></div>
                                            @*<div class="center">
                                                    <h3 class="green">Congrats!</h3>
                                                    Your product is ready to ship! Click finish to continue!
                                                </div>*@
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <div class="wizard-actions">
                                    <button class="btn btn-prev">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Anterior
                                    </button>

                                    <button id="btnConfirmaVendedor" class="btn btn-success btn-next" data-last="Guardar">
                                        Siguiente
                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                    </button>
                                </div>
                            </div><!-- /.widget-main -->
                        </div><!-- /.widget-body -->
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="module" style="font-weight: bold;"></div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="modal-wizard" class="modal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div id="modal-wizard-container">
                                    <div class="modal-header">
                                        <ul class="steps">
                                            <li data-step="1" class="active">
                                                <span class="step">1</span>
                                                <span class="title">Validation states</span>
                                            </li>

                                            <li data-step="2">
                                                <span class="step">2</span>
                                                <span class="title">Alerts</span>
                                            </li>

                                            <li data-step="3">
                                                <span class="step">3</span>
                                                <span class="title">Payment Info</span>
                                            </li>

                                            <li data-step="4">
                                                <span class="step">4</span>
                                                <span class="title">Other Info</span>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="modal-body step-content">
                                        <div class="step-pane active" data-step="1">
                                            <div class="center">
                                                <h4 class="blue">Step 1</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="2">
                                            <div class="center">
                                                <h4 class="blue">Step 2</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="3">
                                            <div class="center">
                                                <h4 class="blue">Step 3</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="4">
                                            <div class="center">
                                                <h4 class="blue">Step 4</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="modal-footer wizard-actions">
                                    <button class="btn btn-sm btn-prev">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Anterior
                                    </button>

                                    <button class="btn btn-success btn-sm btn-next" data-last="Guardar">
                                        Next
                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm pull-left" data-dismiss="modal">
                                        <i class="ace-icon fa fa-times"></i>
                                        Cancel
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div><!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div>


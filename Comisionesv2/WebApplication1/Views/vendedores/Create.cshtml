@model OneCoreData.com_vendedores

@{
    ViewBag.Title = "Resumen Vendedores";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                     <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

                <li>
                    <a href="#">Alta de Vendedores</a>
                </li>
            </ul><!-- /.breadcrumb -->



            @*<div class="nav-search" id="nav-search">
                <form class="form-search">
                    <span class="input-icon">
                        <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                        <i class="ace-icon fa fa-search nav-search-icon"></i>
                    </span>
                </form>
            </div>*@
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Alta de Vendedores
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->

                    <div class="widget-box">

                        <div class="widget-body">
                            <div class="widget-main">
                                <div id="fuelux-wizard-container">
                                    <div>
                                        <ul class="steps">
                                            <li data-step="1" class="active">
                                                <span class="step">1</span>
                                                <span class="title">Solicitud de Datos</span>
                                            </li>
                                            <li data-step="2">
                                                <span class="step">2</span>
                                                <span class="title">Confirmación</span>
                                            </li>
                                        </ul>
                                    </div>

                                    <hr />

                                    <div class="step-content pos-rel">
                                        <div class="step-pane active" data-step="1">
                                            <h3 class="lighter block green">Ingresa la información solicitada</h3>

                                            <form class="form-horizontal" id="vendedores-form" method="get">

                                                @using (Html.BeginForm())
                                                {

                                                    @Html.AntiForgeryToken()
                                                    <div class="form-horizontal">
                                                        <hr />
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.strNombre, "Nombre: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.EditorFor(model => model.strNombre, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                                                                        @Html.ValidationMessageFor(model => model.strNombre, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.strApellidoP, "A. Paterno: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.EditorFor(model => model.strApellidoP, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                                                                        @Html.ValidationMessageFor(model => model.strApellidoP, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.strApellidoM, "A. Materno: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.EditorFor(model => model.strApellidoM, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                                                                        @Html.ValidationMessageFor(model => model.strApellidoM, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                            <div style="clear:both;"></div>

                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.strDireccion, "Direccion: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.EditorFor(model => model.strDireccion, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                                                                        @Html.ValidationMessageFor(model => model.strDireccion, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.strTipoVendedor, "Tipo Vend.: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">

                                                                    @{
                                                                        var selectList = new SelectList(
                                                                        new List<SelectListItem>
                                                                            {
                                                                    new SelectListItem {Text = "Interno ", Value = "Interno "},
                                                                    new SelectListItem {Text = "Externo ", Value = "Externo "},
                                                                            }, "Value", "Text");
                                                                    }

                                                                    @Html.DropDownListFor(m => m.strTipoVendedor, selectList, new { @class = "select2 col-xs-12 zero-padding" })
                                                                    @Html.ValidationMessageFor(model => model.strTipoVendedor, "", new { @class = "text-danger" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.strTelefono, "Telefono: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })

                                                                <div class="col-xs-12 col-sm-9">

                                                                    <div class="input-group" style="width:100%;">
                                                                        <span class="input-group-addon">
                                                                            <i class="ace-icon fa fa-phone"></i>
                                                                        </span>
                                                                        @Html.EditorFor(model => model.strTelefono, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12" } })
                                                                        @Html.ValidationMessageFor(model => model.strTelefono, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                            <div style="clear:both;"></div>

                                                        <div style="float:left;" class="col-xs-4 col-xs-4">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.strEmail, "Email: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.EditorFor(model => model.strEmail, new { htmlAttributes = new { @class = "col-xs-12 col-sm-12", @type = "email" } })
                                                                        @Html.ValidationMessageFor(model => model.strEmail, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>


                                                            @*<div class="form-group col-xs-4">
                @Html.LabelFor(model => model.boolActivo, "Activo ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                <div class="col-xs-12 col-sm-9">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.boolActivo)
                        @Html.ValidationMessageFor(model => model.boolActivo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>*@

                                                        </div>
    }
                                                @*
                                                    <div>
                                                        @Html.ActionLink("Back to List", "Index")
                                                    </div>
                                                *@
                                            </form>
                                        </div>

                                        <div class="step-pane" data-step="2">
                                            <div class="col-xs-6 col-xs-offset-3 widget-container-col">
                                                <div class="widget-box widget-color-blue">
                                                    <!-- #section:custom/widget-box.options -->
                                                    <div class="widget-header">
                                                        <h5 class="widget-title bigger lighter">
                                                            <i class="ace-icon fa fa-table"></i>
                                                            Preview de alta vendedor
                                                        </h5>

                                                    </div>

                                                    <!-- /section:custom/widget-box.options -->
                                                    <div class="widget-body">
                                                        <div class="widget-main no-padding">
                                                            <table class="table table-striped table-bordered table-hover">
                                                                <thead class="thin-border-bottom">
                                                                    <tr>
                                                                        <th>
                                                                            <i class="ace-icon fa fa-bars"></i>
                                                                            Datos
                                                                        </th>

                                                                        <th>
                                                                            <i class="ace-icon fa fa-edit"></i>
                                                                            Valores
                                                                        </th>
                                                                    </tr>
                                                                </thead>

                                                                <tbody>
                                                                    <tr>
                                                                        <td class=""><b>Numero de Vendedor</b></td>

                                                                        <td>
                                                                            <label id="lblIdVendedor"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Nombre</b></td>

                                                                        <td>
                                                                            <label id="lblNombre"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Apellido Paterno</b></td>

                                                                        <td>
                                                                            <label id="lblPaterno"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Apellido Materno</b></td>

                                                                        <td>
                                                                            <label id="lblMaterno"></label>
                                                                        </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td class=""><b>Dirección</b></td>

                                                                        <td>
                                                                            <label id="lblDireccion"></label>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td class=""><b>Tipo Vendedor</b></td>

                                                                        <td>
                                                                            <label id="lblTipo"></label>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td class=""><b>Telefono</b></td>

                                                                        <td>
                                                                            <label id="lblTelefono"></label>
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td class=""><b>Email</b></td>

                                                                        <td>
                                                                            <label id="lblEmail"></label>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div><!-- /.span -->
                                            <div style="clear:both;"></div>
                                            @*<div class="center">
                                                    <h3 class="green">Congrats!</h3>
                                                    Your product is ready to ship! Click finish to continue!
                                                </div>*@
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <div class="wizard-actions">
                                    <button class="btn btn-prev">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Anterior
                                    </button>

                                    <button id="btnConfirmaVendedor" class="btn btn-success btn-next" data-last="Guardar">
                                        Siguiente
                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                    </button>
                                </div>
                            </div><!-- /.widget-main -->
                        </div><!-- /.widget-body -->
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="module" style="font-weight: bold;"></div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="modal-wizard" class="modal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div id="modal-wizard-container">
                                    <div class="modal-header">
                                        <ul class="steps">
                                            <li data-step="1" class="active">
                                                <span class="step">1</span>
                                                <span class="title">Validation states</span>
                                            </li>

                                            <li data-step="2">
                                                <span class="step">2</span>
                                                <span class="title">Alerts</span>
                                            </li>

                                            <li data-step="3">
                                                <span class="step">3</span>
                                                <span class="title">Payment Info</span>
                                            </li>

                                            <li data-step="4">
                                                <span class="step">4</span>
                                                <span class="title">Other Info</span>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="modal-body step-content">
                                        <div class="step-pane active" data-step="1">
                                            <div class="center">
                                                <h4 class="blue">Step 1</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="2">
                                            <div class="center">
                                                <h4 class="blue">Step 2</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="3">
                                            <div class="center">
                                                <h4 class="blue">Step 3</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="4">
                                            <div class="center">
                                                <h4 class="blue">Step 4</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="modal-footer wizard-actions">
                                    <button class="btn btn-sm btn-prev">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Anterior
                                    </button>

                                    <button class="btn btn-success btn-sm btn-next" data-last="Guardar">
                                        Next
                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm pull-left" data-dismiss="modal">
                                        <i class="ace-icon fa fa-times"></i>
                                        Cancel
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div><!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script src="@Url.Content("~/assets/js/jquery.js")"></script>
<script src="@Url.Content("~/assets/js/bootstrap.js")"></script>
<script src="@Url.Content("~/assets/js/select2.js")"></script>

<script src="@Url.Content("~/assets/js/fuelux/fuelux.wizard.js")"></script>
<script src="@Url.Content("~/assets/js/ace/elements.wizard.js")"></script>

<script src="@Url.Content("~/assets/js/jquery.maskedinput.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script src="@Url.Content("~/Scripts/jsVendedores/jsVendedoresCreate.js")"></script>
<script>
    jQuery(document).ready(function ( ) {
        TableDataVendedoresCreate.init();

    });
</script>


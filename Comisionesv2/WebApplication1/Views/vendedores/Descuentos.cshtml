
@{
    ViewBag.Title = "Descuentos";
}

<div class="main-content">


    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

                <li>
                    <a href="#">Descuentos</a>
                </li>
            </ul>
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Descuentos
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <!-- Modal -->
                    <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="module" style="font-weight: bold;"></div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="widget-box">

                        <div class="widget-body">
                            <div class="widget-main">
                                <div id="fuelux-wizard-container">

                                    <hr />

                                    <h3 class="lighter block green">Ingresa la información solicitada</h3>

                                    @using (Html.BeginForm("Descuentos", "Descuentos", FormMethod.Post, new { id = "Descuentos-form", @class = "form-horizontal" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @*@Html.HiddenFor(model => model.idClienteConfig)*@
                                        <input type="hidden" value="@ViewBag.hdnRolID" id="hdnRolID" />



                                        <div class="form-horizontal">
                                            <hr />
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div style="float:left;" class="col-xs-4 col-xs-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.IdEmpresa, "Empresa", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                    <div class="col-xs-12 col-sm-9">
                                                        <div class="input-group" style="width:100%;">
                                                            @Html.DropDownListFor(model => model.IdEmpresa, (SelectList)ViewBag.BagEmpresas, "-- Selecciona Empresa --", new { @class = "select2 fixed-width", @onchange = "javascript:GetCliente(this.value);" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div style="float:left;" class="col-xs-4 col-xs-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.idCodigoVendedor, "Vendedores", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                    <div class="col-xs-12 col-sm-9">
                                                        <div class="input-group" style="width:100%;">
                                                            @Html.DropDownListFor(model => model.idCodigoVendedor, (SelectList)ViewBag.BagVendedores, "-- Selecciona Vendedor --", new { @class = "select2 fixed-width" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="clear:both;"></div>

                                            <div style="float:left;" class="col-xs-4 col-xs-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.idConcepto, "Conceptos", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                    <div class="col-xs-12 col-sm-9">
                                                        <div class="input-group" style="width:100%;">
                                                            @Html.DropDownListFor(model => model.idConcepto, (SelectList)ViewBag.BagConceptos, "-- Selecciona Concepto --", new { @class = "select2 fixed-width" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="clear:both;"></div>

                                        </div>

                                        <div style="width:100%; clear:both;"></div>

                                        <div class="hr hr-dotted"></div>

                                                <div class="form-group col-xs-4">
                                                    @Html.LabelFor(model => model.totalAdeudo, "Total Adeudo:", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-6 no-padding-right" })
                                                    <div class="col-xs-12 col-sm-4">

                                                        <div class="clearfix">
                                                            @Html.EditorFor(model => model.totalAdeudo, new { htmlAttributes = new { @class = "col-xs-12 col-sm-11", @type = "number", @min = "0", @Value = 0 } })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="space-2"></div>

                                                <div class="form-group col-xs-4">
                                                    @Html.LabelFor(model => model.cantidadDescontar, "Cantidad a Descontar:", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-6 no-padding-right" })
                                                    <div class="col-xs-12 col-sm-4">

                                                        <div class="clearfix">
                                                            @Html.EditorFor(model => model.cantidadDescontar, new { htmlAttributes = new { @class = "col-xs-12 col-sm-11", @type = "number", @min = "0", @Value = 0 } })
                                                        </div>
                                                    </div>
                                                </div>

                                                    <div class="space-2"></div>

                                                        <div style="width:100%; clear:both;"></div>


                                                        <div class="form-group col-xs-6">
                                                            <div class="col-xs-12 col-sm-9">
                                                                <div>
                                                                    <label>
                                                                        @*@Html.CheckBoxFor(m => m.strIntercia)*@
                                                                        <input id="strIntercia" name="vigenciaIndefinida" value="Si" type="checkbox" class="ace" />
                                                                        <span class="lbl"> Vigencia Indefinida</span>
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div style="width:100%; clear:both;"></div>

                                                        <div class="hr hr-dotted"></div>

                                                                <div style="width:100%; clear:both;"></div>

                                                                <div class="space-2"></div>

                                    }

                                </div>



                                <hr />
                                <div class="wizard-actions">
                                    <button class="btn btn-prev">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Anterior
                                    </button>

                                    <button id="btnConfirmaCliente" class="btn btn-success btn-next" data-last="Guardar">
                                        Siguiente
                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                    </button>
                                </div>
                            </div><!-- /.widget-main -->
                        </div><!-- /.widget-body -->
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel">
                        <label>Leer</label>
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="module" style="font-weight: bold;"></div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- /.col -->
            </div><!-- /.row -->
        </div>
    </div>
</div>
<script type="text/javascript">
            var jquerymobile = '@Url.Content("~/assets/js/jquery.mobile.custom.js")'
            if ('ontouchstart' in document.documentElement) document.write("<script src='" + jquerymobile + "'>" + "<" + "/script>");
</script>

<!-- ace settings handler -->
<script src="@Url.Content("~/assets/js/ace-extra.js")"></script>

<script src="@Url.Content("~/assets/js/jquery.js")"></script>

<script type="text/javascript" src="@Url.Content("~/Scripts/Exportar/datatables.js")"></script>
<script src="@Url.Content("~/assets/js/dataTables/extensions/TableTools/js/dataTables.tableTools.js")"></script>
<script src="@Url.Content("~/assets/js/dataTables/jquery.dataTables.js")"></script>
<script src="@Url.Content("~/assets/js/dataTables/jquery.dataTables.bootstrap.js")"></script>

<script src="@Url.Content("~/assets/js/dataTables/extensions/ColVis/js/dataTables.colVis.js")"></script>
<script src="@Url.Content("~/assets/js/jquery.table2excel.js")"></script>
<script src="@Url.Content("~/assets/js/bootstrap.js")"></script>
<script src="@Url.Content("~/Scripts/jsVendedores/jsVendedores.js")"></script>


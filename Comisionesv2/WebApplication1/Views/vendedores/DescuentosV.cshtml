@model IEnumerable<OneCoreData.com_DescuentoConceptoVendedor>

@{
    ViewBag.Title = "DescuentosV";
}
<div class="main-content">


    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

                <li>
                    <a href="#">Descuentos</a>
                </li>
            </ul>
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Descuentos
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <!-- Modal -->
                    <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="module" style="font-weight: bold;"></div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="widget-box">

                        <div class="widget-body">
                            <div class="widget-main">
                                <div id="fuelux-wizard-container">

                                    <hr />

                                    <h3 class="lighter block green">Ingresa la información solicitada</h3>

                                    @using (Html.BeginForm("Descuentos", "Descuentos", FormMethod.Post, new { id = "Descuentos-form", @class = "form-horizontal" }))
                                    {
                                        @Html.AntiForgeryToken()

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @*@Html.HiddenFor(model => model.idClienteConfig)*@
                                        <input type="hidden" value="@ViewBag.hdnRolID" id="hdnRolID" />



                                        <div class="form-horizontal">
                                            <hr />
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div style="float:left;" class="col-xs-4 col-xs-4">
                                                <div class="form-group">
                                                    @Html.Label("idEmpresa", "Empresa", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                    <div class="col-xs-12 col-sm-9">
                                                        <div class="input-group" style="width:100%;">
                                                            @Html.DropDownList("idEmpresa", (SelectList)ViewBag.BagEmpresas, "-- Selecciona Empresa --", new { @class = "select2 fixed-width", @value = '0', @onchange = "javascript:GetCliente(this.value);" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div style="float:left;" class="col-xs-4 col-xs-4">
                                                <div class="form-group">
                                                    @Html.Label("idCodigoVendedor", "Vendedores", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                    <div class="col-xs-12 col-sm-9">
                                                        <div class="input-group" style="width:100%;">
                                                            @Html.DropDownList("idCodigoVendedor", (SelectList)ViewBag.BagVendedores, "-- Selecciona Vendedor --", new { @class = "select2 fixed-width" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="clear:both;"></div>

                                            <div style="float:left;" class="col-xs-4 col-xs-4">
                                                <div class="form-group">
                                                    <div class="row">
                                                        @Html.Label("idConcepto", "Conceptos", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                        <div class="col-xs-4 col-sm-6">
                                                            <div class="input-group" style="width:100%;">
                                                                @Html.DropDownList("cbbConceptos", Enumerable.Empty<SelectListItem>(), "-- Selecciona empresa --", htmlAttributes: new { @class = "select2 col-xs-12 col-sm-12 no-padding-left" })
                                                            </div>
                                                        </div>
                                                        <div class="col-xs-2 col-sm-2">                                                                                                                        
                                                            <a id="nuevo" style="cursor:pointer; font-size:16px; display:none;">Nuevo</a>
                                                        </div>
                                                        <div class="col-xs-2 col-sm-1">
                                                            <a id="asociar" style="cursor:pointer; font-size:16px; display:none;">Asociar</a>
                                                        </div>        
                                                    </div>                                                                                                
                                                </div>
                                            </div>
                                            <div style="clear:both;"></div>

                                        </div>

                                        <div style="width:100%; clear:both;"></div>

                                        <div class="hr hr-dotted"></div>

                                        <div class="form-group col-xs-4">
                                            @Html.Label("totalAdeudo", "Total Adeudo:", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-6 no-padding-right" })
                                            <div class="col-xs-12 col-sm-4">

                                                <div class="clearfix">
                                                    @Html.Editor("totalAdeudo", new { htmlAttributes = new { @class = "col-xs-12 col-sm-11", @type = "number", @step = "0.01", @min = "0", @Value = 0 } })
                                                </div>
                                            </div>
                                        </div>

                                                <div class="space-2"></div>

                                                <div class="form-group col-xs-4">
                                                    @Html.Label("cantidadDescontar", "Cantidad a Descontar:", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-6 no-padding-right" })
                                                    <div class="col-xs-12 col-sm-4">

                                                        <div class="clearfix">
                                                            @Html.Editor("cantidadDescontar", new { htmlAttributes = new { @class = "col-xs-12 col-sm-11", @type = "number", @min = "0", @Value = 0 } })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="space-2"></div>

                                                    <div style="width:100%; clear:both;"></div>

                                                    <div style="float:left;" class="col-sm-4 col-xs-4">
                                                        <div class="form-group">
                                                            @Html.Label("strFechasVigencia", "Vigencia: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                            <div class="col-xs-6 col-sm-9">
                                                                <div class="input-group" style="width:100%;">
                                                                    <span class="input-group-addon">
                                                                        <i class="fa fa-calendar bigger-110"></i>
                                                                    </span>
                                                                    @Html.TextBox("vigenciaInicio", "", new { @class = "form-control datepicker", placeholder = "Ingresa la fecha aquí..." })
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div style="float:left;" class="col-sm-4 col-xs-4">
                                                        <div class="form-group">
                                                            @Html.Label("strFechasVigenciaAl", "al: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                            <div class="col-xs-6 col-sm-9">
                                                                <div class="input-group" style="width:100%;">
                                                                    <span class="input-group-addon">
                                                                        <i class="fa fa-calendar bigger-110"></i>
                                                                    </span>
                                                                    @Html.TextBox("vigenciaFin", "", new { @class = "form-control datepicker", placeholder = "Ingresa la fecha aquí..." })
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>


                                                        <div style="float:left;" class="col-sm-4 col-xs-4">
                                                            <div style="float:left;" class="col-xs-12 col-sm-9">
                                                                <div  class="col-xs-12 col-sm-9">
                                                                    <label>
                                                                        @*@Html.CheckBoxFor(m => m.strIntercia)*@
                                                                        <input id="strIntercia" name="vigenciaIndefinida" value="Si" type="checkbox" class="ace" />
                                                                        <span class="lbl"> Vigencia Indefinida</span>
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div style="width:100%; clear:both;"></div>

                                                        <div class="hr hr-dotted"></div>

                                                        <div style="width:100%; clear:both;"></div>

                                                                <div class="space-2"></div>

                                    }

                                </div>



                                <hr />
                             
                                <div class="wizard-actions">                                 
                                    <button id="btnConfirmaCliente" class="btn btn-success btn-next" data-last="Guardar">
                                        Agregar
                                    </button>
                                </div>

                                <div style="float:right;" class="col-xs-10 col-xs-10">
                                    <div class="form-group">
                                        <div class="col-xs-12 col-sm-9">
                                            <div class="input-group" style="width:100%;">
                                                @Html.DropDownList("idVendedor", (SelectList)ViewBag.BagVendedores, "-- Selecciona Vendedor --", new { @class = "select3 fixed-width" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>idDescConcepto</th>
                                                <th>idEmpresa</th>
                                                <th>idCodigoVendedor</th>
                                                <th>idConcepto</th>
                                                <th>strConcepto</th>
                                                <th>cantidadDescontar</th>                                                
                                                <th>vigenciaInicio</th>
                                                <th>vigenciaFin</th>
                                                <th>status</th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idDescConcepto)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idEmpresa)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idCodigoVendedor)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idConcepto)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.strConcepto)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.cantidadDescontar)
                                                </td>
                                                <td>
                                                    @string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(Html.DisplayFor(modelItem => item.vigenciaInicio).ToString()))
                                            </td>
                                            @if ((item.vigenciaFin != null))
                                            {
                                                <td>@string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(Html.DisplayFor(modelItem => item.vigenciaFin).ToString())) </td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }

                                            @{
                                                var boolActivo = item.status == true ? "SI" : "NO";
                                            }
                                            <td> @Html.DisplayFor(modelItem => boolActivo)</td>

                                            <td>
                                                @*@Html.ActionLink("Edit", "Edit", new { id = item.idCodigoVendedor }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idCodigoVendedor }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idCodigoVendedor })*@
                                            </td>
                                        </tr>
                                                }
                                    </table>
                                </div>
                               
                            </div><!-- /.widget-main -->
                        </div><!-- /.widget-body -->
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel">
                        <label>Leer</label>
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="module" style="font-weight: bold;"></div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal Concepto-->
                    <div class="modal fade" id="nuevoModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel" data-keyboard="false" data-backdrop="static">
                        <div id="" class="modal-lg center-block" role="document" style="width:500px; margin-top:20px;">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Nuevo Concepto</h4>
                                </div>
                                <div class="modal-body">
                                   <div id="ReporteClientes">       
                                        <div class="row">
                                            <div class="col-xs-12" style="margin-top:25px;">
                                                <label class="control-label col-xs-12 col-sm-2">GRPID</label>
                                                <div class="col-xs-12 col-sm-6">
                                                    <input id="txtGRPID" class="col-xs-12" type="text" style="margin-left:15px; width:500px;" />
                                                    <div id="mensaje1" class="errores" style="display:none; color:red;">&nbsp;&nbsp;&nbsp;&nbsp;Ingerese un valor</div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12" style="margin-top:25px;">
                                                <label class="control-label col-xs-12 col-sm-2">Descripcion</label>
                                                <div class="col-xs-12 col-sm-6">
                                                    <input id="txtDesc" class="col-xs-12" type="text" style="margin-left:15px;"/>
                                                    <div id="mensaje2" class="errores" style="display:none; color:red;">&nbsp;&nbsp;&nbsp;&nbsp;Ingrese un valor</div>
                                                </div>
                                            </div>
                                        </div>
                                       <div class="row">
                                           <div class="col-xs-9"></div>
                                           <div class="col-xs-2" style="margin-top:25px;">
                                               <button id="btnGuardarConcepto" class="btn btn-primary btn-sm">Guardar</button>
                                           </div>
                                       </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- /.col -->
            </div><!-- /.row -->
        </div>
    </div>
</div>

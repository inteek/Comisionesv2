@model OneCoreData.com_periodos

@{
    ViewBag.Title = "LiberarPeriodo";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

            </ul>
               
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Liberación de periodos
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->

                    <div class="widget-box">

                        <div class="widget-body">
                            <div class="widget-main">
                                <div id="fuelux-wizard-container">
                                    <hr />
                                    <div class="step-content pos-rel">
                                        <div class="step-pane active" data-step="1">
                                        
                                            <form class="form-horizontal" id="periodos-form" method="get">

                                                @using (Html.BeginForm())
                                                {

                                                    @Html.AntiForgeryToken()
                                                    <div class="form-horizontal">
                                                        <hr />

                                                        <div style="float:left;" class="col-sm-7 col-xs-7">

                                                            <div style="float:left;" class="col-sm-5 col-xs-5">
                                                                <div class="form-group">
                                                                    @Html.Label("strPeriodo", "Periodo: ", htmlAttributes: new { @class = "control-label col-xs-8 col-sm-3 no-padding-right" })
                                                                    <div class="col-xs-6 col-sm-9">
                                                                        <div class="input-group" style="width:100%;">
                                                                            @Html.DropDownList("strPeriodo", (SelectList)ViewBag.BagPeriodos, new { @class = "select2 widths-100 zero-padding" })
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                            <div style="float:left;" class="col-sm-7 col-xs-7">
                                                                <div class="form-group">
                                                                    @Html.LabelFor(model => model.idCodigoVendedor, "Vendedor: ", htmlAttributes: new { @class = "control-label col-xs12 col-sm-3 no-padding-right" })
                                                                    <div class="col-xs-6 col-sm-9">
                                                                        <div class="input-group" style="width:100%;">
                                                                            @Html.DropDownListFor(model => model.idCodigoVendedor, (SelectList)ViewBag.BagVendedores, "-- Selecciona un vendedor --", new { @class = "select2 widths-220" })
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div style="float:right;" class="col-sm-5 col-xs-5">
                                                            <div class="control-group">
                                                                <div class="radio-inline">
                                                                    <label class="line-height-1 blue">
                                                                        @Html.RadioButton("rdBtnComisionable", "Comisionable", htmlAttributes: new { @class = "ace" })
                                                                        <span class="lbl">Comisionable</span>
                                                                    </label>
                                                                </div>
                                                                <div class="radio-inline">
                                                                    <label class="line-height-1 blue">
                                                                        @Html.RadioButton("rdBtnNoComisionable", "No Comisionable", htmlAttributes: new { @class = "ace" })
                                                                        <span class="lbl">No Comisionable</span>
                                                                    </label>
                                                                </div>
                                                                <div class="radio-inline">
                                                                    <label class="line-height-1 blue">
                                                                        @Html.RadioButton("rdBtnRetenciones", "Retenciones", htmlAttributes: new { @class = "ace" })
                                                                        <span class="lbl">Retenciones</span>
                                                                    </label>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div style="clear:both;"></div>



                                                        <div class="row">
                                                            <div class="col-xs-12">
                                                                <div class="widget-box">
                                                                    <div class="widget-header widget-header-flat">
                                                                        <div class="col-sm-8 col-xs-8">

                                                                        </div>
                                                                        <div class="col-sm-1 col-xs-1">


                                                                            <button class="btn btn-default btn-info btn-sm" style="width:initial; padding: 10px; font-size: 10px; margin: 1px;">
                                                                                Liberar
                                                                            </button>

                                                                        </div>
                                                                        <div class="col-sm-2 col-xs-2">
                                                                            @Html.Editor("txtBuscarFactura", new
                                                                       {
                                                                           htmlAttributes = new { @class = "col-xs-12 col-sm-11", @type = "number", placeholder = "Buscar factura" }
                                                                       })
                                                                        </div>

                                                                        <div class="col-sm-1 col-xs-1">
                                                                            <button class="btn btn-default btn-info btn-sm" style="width:initial; padding: 10px; font-size: 10px; margin: 1px;">
                                                                                Buscar
                                                                            </button>
                                                                        </div>


                                                                        <div style="clear:both;"></div>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>


                                                    </div>


                                                    <div class="col-xs-12">
                                                        <!-- PAGE CONTENT BEGINS -->
                                                        <div class="row">
                                                            <table id="simple-table" class="table table-striped table-bordered table-hover">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Nombre</th>
                                                                        <th>Email</th>
                                                                        <th></th>
                                                                    </tr>
                                                                </thead>

                                                                <tbody>
                                                                    @if (Model.aduasisModel.tbNotificacionesEquipo != null)
                                                                    {
                                                                        foreach (var item in Model.aduasisModel.tbNotificacionesEquipo)
                                                                        {
                                                                            <tr id="@Html.DisplayFor(modelItem => item.UserId)">
                                                                                <td style="display: none;">@Html.DisplayFor(modelItem => item.UserId)</td>
                                                                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                                                                <td>@Html.DisplayFor(modelItem => item.Email)</td>

                                                                                <td style="text-align:center">
                                                                                    <button type="button" onclick="fnEliminarUsuario('@Html.DisplayFor(modelItem => item.UserId)')"><img id="cargando" src="~/assets/img/trash2.ico" /></button>
                                                                                </td>

                                                                            </tr>
                                                                        }
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div><!-- /.row -->
                                                    </div>
                                                }

                                            </form>



                                        </div>

                                        
                                    </div>
                                </div>

                                <hr />
                               
                            </div><!-- /.widget-main -->
                        </div><!-- /.widget-body -->
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="module" style="font-weight: bold;"></div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                  

                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script src="@Url.Content("~/assets/js/jquery.js")"></script>
<script src="@Url.Content("~/assets/js/bootstrap.js")"></script>
<script src="@Url.Content("~/assets/js/select2.js")"></script>

<script src="@Url.Content("~/assets/js/fuelux/fuelux.wizard.js")"></script>
<script src="@Url.Content("~/assets/js/ace/elements.wizard.js")"></script>

<script src="@Url.Content("~/assets/js/jquery.maskedinput.js")"></script>
<script src="@Url.Content("~/assets/js/moment.min.js")"></script>
<script src="@Url.Content("~/assets/js/daterangepicker.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script src="@Url.Content("~/assets/js/bootbox.js")"></script>

<script src="@Url.Content("~/Scripts/jsPeriodos/jsPeriodosCreate.js")"></script>
<script src="@Url.Content("~/Scripts/jsPeriodos/jsPeriodosLiberar.js")"></script>
<script>
    jQuery(document).ready(function ( ) {
        TableDataPeriodosCreate.init();

    });
</script>


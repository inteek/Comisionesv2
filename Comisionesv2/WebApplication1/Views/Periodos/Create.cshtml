@model OneCoreData.com_periodos

@{
    ViewBag.Title = "Generación de periodo";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

                <li>
                    <a href="#">Generar periodos</a>
                </li>
            </ul><!-- /.breadcrumb -->
            @*<div class="nav-search" id="nav-search">
                    <form class="form-search">
                        <span class="input-icon">
                            <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                            <i class="ace-icon fa fa-search nav-search-icon"></i>
                        </span>
                    </form>
                </div>*@
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Generación de periodos
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->

                    <div class="widget-box">

                        <div class="widget-body">
                            <div class="widget-main">
                                <div id="fuelux-wizard-container">
                                    <div>
                                        <ul class="steps">
                                            <li data-step="1" class="active">
                                                <span class="step">1</span>
                                                <span class="title">Datos del periodo</span>
                                            </li>
                                            <li data-step="2">
                                                <span class="step">2</span>
                                                <span class="title">Confirmación</span>
                                            </li>
                                        </ul>
                                    </div>

                                    <hr />

                                    <div class="step-content pos-rel">
                                        <div class="step-pane active" data-step="1">
                                            <h3 class="lighter block green">Estructura el periodo</h3>

                                            <form class="form-horizontal" id="periodos-form" method="get">

                                                @using (Html.BeginForm())
                                                {

                                                    @Html.AntiForgeryToken()

                                                    <div class="form-horizontal">
                                                        <hr />
                                                        <input type="hidden" value="@ViewBag.vendedorDefault" id="hdnVendedorID" />
                                                        <input type="hidden" value="@ViewBag.periodoDefault" id="hdnPeriodoID" />
                                                        <div style="float:left;" class="col-sm-6 col-xs-6">
                                                            <div class="form-group">
                                                                @Html.LabelFor(model => model.idCodigoVendedor, "Vendedor: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.DropDownListFor(model => model.idCodigoVendedor, (SelectList)ViewBag.BagVendedores, "-- Selecciona un vendedor --", new { @class = "select2 widths-220" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div style="float:left;" class="col-sm-6 col-xs-6">
                                                            <div class="form-group">
                                                                @Html.Label("strPeriodo", "Periodo: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        @Html.DropDownList("strPeriodo", (SelectList)ViewBag.BagPeriodos, new { @class = "select2 widths-200 zero-padding" })
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div style="clear:both;"></div>
                                                        <div style="float:left;" class="col-sm-6 col-xs-6">
                                                            <div class="form-group">
                                                                @Html.Label("strFechasPeriodo", "Fecha Inicio - Fin: ", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-3 no-padding-right" })
                                                                <div class="col-xs-12 col-sm-9">
                                                                    <div class="input-group" style="width:100%;">
                                                                        <span class="input-group-addon">
                                                                            <i class="fa fa-calendar bigger-110"></i>
                                                                        </span>
                                                                        <input class="form-control" type="text" name="date-range-picker" id="id-date-range-picker-1" />
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>


                                                        <div style="clear:both;"></div>

                                                        
                                                    </div>
                                                }

                                            </form>

                                        </div>

                                        <div class="step-pane" data-step="2">
                                            <div class="col-xs-8 col-xs-offset-2">
                                                <div class="tabbable tabs-left">
                                                    <ul class="nav nav-tabs" id="myTab3">
                                                        <li class="active">
                                                            <a data-toggle="tab" href="#home3">
                                                                <i class="pink ace-icon fa fa-tachometer bigger-110"></i>
                                                                Preview de periodo
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a data-toggle="tab" href="#profile3">
                                                                <i class="blue ace-icon fa fa-bars bigger-110"></i>
                                                                Clientes
                                                            </a>
                                                        </li>

                                                    </ul>

                                                    <div class="tab-content" style="border-width: 1px;">
                                                        <div id="home3" class="tab-pane in active">

                                                            <div class="col-xs-12 widget-container-col">
                                                                <div class="widget-box widget-color-blue">
                                                                    <!-- #section:custom/widget-box.options -->
                                                                    <div class="widget-header">
                                                                        <h5 class="widget-title bigger lighter">
                                                                            <i class="ace-icon fa fa-table"></i>
                                                                            Preview de Apertura de periodo
                                                                        </h5>

                                                                    </div>

                                                                    <!-- /section:custom/widget-box.options -->
                                                                    <div class="widget-body">
                                                                        <div class="widget-main no-padding">
                                                                            <table class="table table-striped table-bordered table-hover">
                                                                                <thead class="thin-border-bottom">
                                                                                    <tr>
                                                                                        <th>
                                                                                            <i class="ace-icon fa fa-bars"></i>
                                                                                            Datos
                                                                                        </th>

                                                                                        <th>
                                                                                            <i class="ace-icon fa fa-edit"></i>
                                                                                            Valores
                                                                                        </th>
                                                                                    </tr>
                                                                                </thead>

                                                                                <tbody>
                                                                                    <tr>
                                                                                        <td class=""><b>Vendedor</b></td>

                                                                                        <td>
                                                                                            <label id="lblstrNombreVendedor"></label>
                                                                                        </td>
                                                                                    </tr>

                                                                                    <tr>
                                                                                        <td class=""><b>Periodo</b></td>

                                                                                        <td>
                                                                                            <label id="lblPeriodo"></label>
                                                                                        </td>
                                                                                    </tr>

                                                                                    <tr>
                                                                                        <td class=""><b>Fecha Inicio - Fin</b></td>

                                                                                        <td>
                                                                                            <label id="lblFechas"></label>
                                                                                        </td>
                                                                                    </tr>
                                                                                </tbody>
                                                                            </table>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div><!-- /.span -->
                                                        </div>

                                                        <div id="profile3" class="tab-pane">
                                                            <div class="col-xs-12 widget-container-col">
                                                                <h4 class="header blue" style="margin:0px;">Clientes Nuevos no configurados</h4>
                                                                <div id="box-clientes">
                                                                    <div style="width:100%; text-align:center; font-weight:bold; font-size: 16px;">Buscando... Por favor, espera.</div>
                                                                    <div style="width:100%; text-align:center;"><img src="~/assets/images/103.gif" /></div>

                                                                </div>
                                                            </div><!-- /.span -->

                                                        </div>

                                                    </div>
                                                </div>
                                            </div><!-- /.col -->



                                            <div style="clear:both;"></div>

                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <div class="wizard-actions">
                                    <button class="btn btn-prev">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Anterior
                                    </button>

                                    <button id="btnConfirmaVendedor" class="btn btn-success btn-next" data-last="Guardar">
                                        Siguiente
                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                    </button>
                                </div>
                            </div><!-- /.widget-main -->
                        </div><!-- /.widget-body -->
                    </div>



                @*---------------- agregar periodos anteriores*@
                
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="widget-box">
                                <div class="widget-header widget-header-flat">
                                    <h4 class="smaller">
                                        Reporte de Periodos Anteriores
                                    </h4>
                                </div>

                                <div class="widget-body">
                                    <div class="widget-main">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Vendedores
                                            </span>
                                            @Html.DropDownListFor(model => model.idCodigoVendedor, (SelectList)ViewBag.BagVendedores, "-- Selecciona Vendedor --", new { @id = "vendedoresPeriodosAnteriores", @class = "input-large valid select-33" })

                                            <span class="input-group-addon">
                                                Periodos
                                            </span>
                                            @Html.DropDownList("strPeriodoPeriodosAnteriores", (SelectList)ViewBag.BagPeriodos, "-- Selecciona periodo --", new { @class = "input-large valid select-33" })

                                            <span class="input-group-btn">
                                                <button type="button" id="generarReporteAnterior" class="btn btn-purple btn-sm">
                                                    <span class="ace-icon fa fa-book icon-on-right bigger-110"></span>
                                                    Generar Reporte
                                                </button>
                                            </span>
                                        </div>
                                      
                                        <div style="width:100%; clear:both;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                @*-----------------*@

                    <div class="row">
                        <div class="col-xs-12">
                            <div class="widget-box">
                                <div class="widget-header widget-header-flat">
                                    <h4 class="widget-title smaller">Reportes</h4>
                                </div>

                                <div class="widget-body">
                                    <div class="widget-main">
                                        <div class="col-xs-12">
                                            <button id="resumenCliente" class="btn btn-default btn-info btn-sm cancel" disablevalidation="true" style="width:initial; padding: 10px; font-size: 14px; margin: 1px;">
                                                @*<i class="ace-icon fa fa-share bigger-140"></i>*@
                                                Resumen de comisiones x Cliente
                                            </button>

                                            <button id="detalleComisiones" class="btn btn-default btn-info btn-sm cancel" style="width:initial; padding: 10px; font-size: 14px; margin: 1px;">
                                                @*<i class="ace-icon fa fa-share bigger-140"></i>*@
                                                Detalle de comisiones por cliente
                                            </button>

                                            <button id="detalleNoComisionables" class="btn btn-default btn-info btn-sm cancel" style="width:initial; padding: 10px; font-size: 14px; margin: 1px;">
                                                @*<i class="ace-icon fa fa-share bigger-140"></i>*@
                                                Reporte no comisionable
                                            </button>

                                            <button id="detalleRetenciones" class="btn btn-default btn-info btn-sm cancel" style="width:initial; padding: 10px; font-size: 14px; margin: 1px;">
                                                @*<i class="ace-icon fa fa-share bigger-140"></i>*@
                                                Reporte de Retenciones
                                            </button>

                                            <button id="detalleComisionesEquipo" class="btn btn-default btn-info btn-sm cancel" style="width:initial; padding: 10px; font-size: 14px; margin: 1px;">
                                                @*<i class="ace-icon fa fa-share bigger-140"></i>*@
                                                Resumen de comisiones por equipo
                                            </button>
                                            <button id="reseumenPagoComisionCuentaBancaria" class="btn btn-default btn-info btn-sm cancel" style="width:initial; padding: 10px; font-size: 14px; margin: 1px;">
                                                @*<i class="ace-icon fa fa-share bigger-140"></i>*@
                                                Resumen de pagos de comisiones a cuentas bancarias
                                            </button>
                                        </div>
                                        <div style="clear:both;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="resumenModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel"  data-keyboard="false" data-backdrop="static">
                        <div id=""class="modal70" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Resumen de Comisiones por Cliente</h4>
                                </div>
                                    <div id="ReporteClientes">

                                    </div>
                               
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel" data-keyboard="false" data-backdrop="static">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="module" style="font-weight: bold;"></div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                            <span class="sr-only">Cargando...</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="ModalResumen" tabindex="-1" role="dialog" aria-labelledby="ModalResumenLabel" data-keyboard="false" data-backdrop="static">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="ModalResumenLabel">Cambios detectados en periodos anteriores de clientes</h4>
                                </div>
                                <div class="modal-body">
                                    <div id="cnt_Historico"></div>
                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal de contenedor de Reportes -->
                    <div class="modal fade" id="ContainerModal" tabindex="-1" role="dialog" aria-labelledby="ContainerModalLabel" data-keyboard="false" data-backdrop="static">
                        <label>Leer</label>
                        <div id="" class="modal70" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="ContainerModalLabel">Cargando reporte de...</h4>
                                </div>
                                <div id="modal-body" class="modal-body">
                                    <div id="container_report" style="display: none;">

                                    </div>
                                    <div id="container_report3">

                                    </div>
                                    <div id="container_report2">
                                        <div id="module" style="font-weight: bold;"></div>
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                                <span class="sr-only">Cargando...</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="editor"></div>
                                    <button class="btn btn-xs btn-danger pull-right" style="margin: 0px 10px; display:none;" id="cmd">Generar PDF</button>
                                    <button class="btn btn-xs btn-success pull-right" id="cmd_excel" style="display:none;">Generar XLS</button>
                                    <div style="clear:both"></div>

                                </div>
                                <div class="modal-footer">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="modal-wizard" class="modal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div id="modal-wizard-container">
                                    <div class="modal-header">
                                        <ul class="steps">
                                            <li data-step="1" class="active">
                                                <span class="step">1</span>
                                                <span class="title">Validation states</span>
                                            </li>

                                            <li data-step="2">
                                                <span class="step">2</span>
                                                <span class="title">Alerts</span>
                                            </li>

                                            <li data-step="3">
                                                <span class="step">3</span>
                                                <span class="title">Payment Info</span>
                                            </li>

                                            <li data-step="4">
                                                <span class="step">4</span>
                                                <span class="title">Other Info</span>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="modal-body step-content">
                                        <div class="step-pane active" data-step="1">
                                            <div class="center">
                                                <h4 class="blue">Step 1</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="2">
                                            <div class="center">
                                                <h4 class="blue">Step 2</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="3">
                                            <div class="center">
                                                <h4 class="blue">Step 3</h4>
                                            </div>
                                        </div>

                                        <div class="step-pane" data-step="4">
                                            <div class="center">
                                                <h4 class="blue">Step 4</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="modal-footer wizard-actions">
                                    <button class="btn btn-sm btn-prev">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Anterior
                                    </button>

                                    <button class="btn btn-success btn-sm btn-next" data-last="Guardar">
                                        Next
                                        <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm pull-left" data-dismiss="modal">
                                        <i class="ace-icon fa fa-times"></i>
                                        Cancel
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div><!-- PAGE CONTENT ENDS -->



                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div>



@{
    ViewBag.Title = "Historico de Periodos";
}

<div class="main-content">
    <style type="text/css">
        .modal-backdrop.in {
            opacity: .5 !important;
            z-index: -1;
        }
    </style>



    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="@Url.Action("Index", "Home")">Principal</a>
                </li>

                <li>
                    <a href="#">Historico de periodos</a>
                </li>
            </ul><!-- /.breadcrumb -->
            
        </div>

        <div class="page-content">

            <div class="page-header">
                <h1>
                    Historico de periodos
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Comisiones
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <!-- Modal -->
            <div class="modal fade" style="z-index:100;" id="resumenModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel" data-keyboard="false" data-backdrop="static">
                <div id="" class="modal70" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="waitModalLabel">Resumen de Comisiones por Cliente</h4>
                        </div>
                        <div id="ReporteClientes">

                        </div>
                        <div id="div_ListaParcial" style="display: none;">

                        </div>
                        <div id="div_ListaParcial2">
                            <div id="module" style="font-weight: bold;"></div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                    <span class="sr-only">Cargando...</span>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="hdnPeriodo" value="" />
                        <div id="editor"></div>
                        <button class="btn btn-xs btn-danger pull-right" style="margin: 0px 10px; display:none;" id="cmd">Generar PDF</button>
                        <button class="btn btn-xs btn-success pull-right" id="cmd_excel" style="display:none;">Generar XLS</button>
                        <div class="modal-footer">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="waitModalLabel" data-keyboard="false" data-backdrop="static">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="waitModalLabel">Cargando</h4>
                        </div>
                        <div class="modal-body">
                            <div id="module" style="font-weight: bold;"></div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                    <span class="sr-only">Cargando...</span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">

                    <div class="clearfix">
                        <button id="btnXLS" class="pull-right DTTT_button btn btn-white btn-primary  btn-bold" title="Alt. Exportar Excel" style="padding: 4px 8px; display:none;"><img src="~/assets/images/icons8-Microsoft Excel-48.png" style="width: 24px;" /></button>
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">
                        <div class="input-group">
                            <span class="input-group-addon span-input">
                                Vendedores
                            </span>
                            @Html.DropDownList("idCodigoVendedor", (SelectList)ViewBag.BagVendedores, "-- Selecciona Vendedor --", new { @id = "vendedoresPeriodosAnteriores", @class = "input-large valid select-33" })

                            <span class="input-group-addon span-input">
                                Año
                            </span>
                            @Html.DropDownList("strPeriodoPeriodosAnteriores", (SelectList)ViewBag.BagPeriodos, new { @class = "input-large valid select-33" })

                            <span class="input-group-btn">
                                <button type="button" id="btnBuscarPeriodos" class="btn btn-white btn-primary">
                                    <span class="ace-icon fa fa-search icon-on-right bigger-110"></span>
                                    Mostrar Periodos
                                </button>
                            </span>
                        </div>
                    </div>

                    <div id="Carga_tablaPeriodos">
                        <table id="simple-table" class="table  table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="detail-col">Vendedor</th>
                                    <th>Periodo</th>
                                    <th>Rango Fechas</th>
                                    <th class="hidden-480">Estatus</th>

                                    <th>
                                        <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                        Recalcular Periodo
                                    </th>
                                    <th class="hidden-480">Estatus Periodo</th>

                                    <th>Ver Periodo</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                    <td colspan="7" class="center">
                                        Selecciona un vendedor y un año para buscar sus periodos
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    

                    <!-- div.table-responsive -->
                    <!-- div.dataTables_borderWrap -->
                    <div>
                       
           
                    </div>
                </div>
            </div>
        </div><!-- /.page-content -->
    </div>
</div>
<script type="text/javascript">
            var jquerymobile = '@Url.Content("~/assets/js/jquery.mobile.custom.js")'
            if ('ontouchstart' in document.documentElement) document.write("<script src='" + jquerymobile + "'>" + "<" + "/script>");
</script>


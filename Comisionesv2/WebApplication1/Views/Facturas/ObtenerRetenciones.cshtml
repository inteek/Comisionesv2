
@model IEnumerable<OneCoreData.SP_COMISIONES_CONSULTAR_FACTURAS_RETENIDAS_Result>

@{
    Layout = null;
}
<div id="dynamic-table_wrapper" class="dataTables_wrapper form-inline no-footer">

    <table id="dynamic-table" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="dynamic-table_info">
        <thead>
            <tr role="row">
                <th class="center sorting_disabled" aria-label="">
                    <label class="pos-rel">
                        <input type="checkbox" class="ace">
                        <span class="lbl"></span>
                    </label>
                </th>
                <th class="sorting_disabled" tabindex="0" aria-controls="dynamic-table" aria-label="Empresa">EMPRESA</th>
                <th class="sorting_disabled" tabindex="0" aria-controls="dynamic-table" aria-label="Domain: activate to sort column ascending">ID RETENCION</th>
                <th class="sorting" tabindex="0" aria-controls="dynamic-table" aria-label="Price: activate to sort column ascending">PERIODO</th>
                @*<th class="sorting" tabindex="0" aria-controls="dynamic-table" aria-label="Clicks: activate to sort column ascending">SLPRSNID</th>*@
                <th class="sorting" tabindex="0" aria-controls="dynamic-table" aria-label="Update: activate to sort column ascending">ID CLIENTE</th>
                <th class="sorting" tabindex="0" aria-controls="dynamic-table" aria-label="Update: activate to sort column ascending">CLIENTE</th>
                <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table" aria-label="Status: activate to sort column ascending">FACTURA</th>
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">FECHA PAGO</th>
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">FECHA FACTURA</th>
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">FECHA ENVIO</th>
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">MONTO FACTURA</th>
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">MONTO RETENIDO</th>
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">RETENER</th>
                @*<th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">DATESYS</th>*@
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">FECHA LIBERA</th>
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">ACTIVO</th>
                <th class="sorting_disabled" aria-controls="dynamic-table" aria-label="">PERIODO LIBERADO</th>
            </tr>
        </thead>
        @{  int contador = 0;
            foreach (var factura in Model)
            {
                contador++;
                <tr id="@contador">
                    <td class="center">
                        <label class="pos-rel">
                            <input class="ace" type="checkbox" id="chbLiberar" value="@Html.DisplayFor(modelItem => factura.EMPRESA)-@Html.DisplayFor(modelItem => factura.ID_RETENCION)" onclick="guardarParametros(this)">
                            <span class="lbl"></span>
                        </label>
                    </td>
                    <td> @Html.DisplayFor(modelItem => factura.EMPRESA) </td>
                    <td> @Html.DisplayFor(modelItem => factura.ID_RETENCION) </td>
                    <td> @Html.DisplayFor(modelItem => factura.PERIODO) </td>
                    @*<td> @Html.DisplayFor(modelItem => factura.SLPRSNID) </td>*@
                    <td> @Html.DisplayFor(modelItem => factura.CUSTNMBR) </td>
                    <td> @Html.DisplayFor(modelItem => factura.CUSTNAME) </td>
                    <td> @Html.DisplayFor(modelItem => factura.FACTURA) </td>
                    <td> @Html.DisplayFor(modelItem => factura.DATE_PAGO) </td>
                    <td> @Html.DisplayFor(modelItem => factura.DATE_FACTURA) </td>
                    <td> @Html.DisplayFor(modelItem => factura.DATE_ENVIO) </td>
                    <td> @Html.DisplayFor(modelItem => factura.MONTO_FACTURA) </td>
                    <td> @Html.DisplayFor(modelItem => factura.MONTO_RETENIDO)</td>

                    @if (factura.RETENER.GetValueOrDefault())
                    {
                        <td id="activo" style="text-align: center"><input type="checkbox" checked="checked" contenteditable="false" disabled /></td> }
                    else
                    {
                        <td id="retenido" style="text-align: center"><input type="checkbox" contenteditable="false" disabled /></td> }

                    @*<td> @Html.DisplayFor(modelItem => factura.DATESYS) </td>*@
                    <td> @Html.DisplayFor(modelItem => factura.DATE_LIBERA) </td>

                    @if (factura.ACTIVO.GetValueOrDefault())
                    {
                        <td id="activo" style="text-align: center"><input type="checkbox" checked="checked" contenteditable="false" disabled /></td> }
                    else
                    {
                        <td id="activo" style="text-align: center"><input type="checkbox" contenteditable="false" disabled /></td> }

                    <td> @Html.DisplayFor(modelItem => factura.PERIODO_LIBERADO) </td>
                </tr>

            } }
    </table>

</div>



